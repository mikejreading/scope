{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "..",
    "paths": {
      "@app/*": ["apps/api/src/*"],
      "@lib/*": ["libs/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
