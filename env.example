# ====================================
# Database Configuration
# ====================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/scope_platform_dev?schema=public"
SHADOW_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/scope_platform_shadow?schema=public"

# ====================================
# Authentication
# ====================================
# Generate a secure random string for NEXTAUTH_SECRET:
# On Linux/Mac: openssl rand -base64 32
# On Windows:   [System.Convert]::ToBase64String([System.Security.Cryptography.RandomNumberGenerator]::Create().GetBytes(32))
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# ====================================
# OAuth Providers
# ====================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ====================================
# Environment
# ====================================
NODE_ENV=development
